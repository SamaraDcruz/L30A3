class PairFinder:
    def __init__(self):
        self.numbers = (10, 20, 30, 40, 50, 60, 70)

    def find_pairs(self, target_sum):
        print(f"Finding pairs that add up to {target_sum}...\n")

        found = False

        for i in range(len(self.numbers)):
            for j in range(i + 1, len(self.numbers)):
                if self.numbers[i] + self.numbers[j] == target_sum:
                    print("Pair found: {self.numbers[i]} + {self.numbers[j]}") = {target_sum}
                    print(f"Positions: {i} and {j}\n")
                    found = True

        if not found:
            print("No such pair found.")

# Taking user input
target = int(input("Enter the sum to searcch: "))

# Creating object and calling method
obj = PairFinder()
obj.find_pairs(target)